$("ul.errors").html("")
<% if @expense.errors.any? %>
	<% @expense.errors.full_messages.each do |msg| %>
		$("ul.errors").append($("<li />").html("<%= msg.html_safe %>"))
	<% end %>
<% else %>

var total =$("h3.total_expense").text();
	 
	 		if (total != "") {
	 			  location.reload();
	 		}
	 
	$("#expense").append("<%= j render @expense%>")
	$("#expense-modal").modal("hide")
<% end %>