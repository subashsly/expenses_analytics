$("ul.errors").html("")
<% if @reminder.errors.any? %>
	<% @reminders.errors.full_messages.each do |msg| %>
		$("ul.errors").append($("<li />")).html("<%= msg.html_safe %>"))
	<% end %>
<% else %>
	$(".reminder-index").html("<%= escape_javascript(render 'index') %>")
	$("#reminder-modal").modal("hide")
<% end %>