<div class="container">
<div class="reminders  table-margin">
            <span><h3>Bill Reminders</h3>  <%= link_to "Add Reminder", new_reminder_path,remote: true, class: 'btn sign-up' %><br/> </span>
        <br />
        <%#= will_paginate @reminders %>
            <table class="table table-bordered table-striped" id="reminder">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th colspan="2">Action</th>
                    
                </tr>
            </thead>

            <tbody class="reminder-index">
               <%# if current_member.reminders != nil %>
        <% current_member.reminders.each do |reminder| %>
            <tr id="reminder-<%= reminder.id %>">
                <td><%= reminder.title %></td>
                <td><%= reminder.amount %></td>
                <td><%= reminder.date_notify %></td>
                <td><%= link_to "Edit", edit_reminder_path(reminder),remote: true,
                                class: 'btn btn-default' %></td>
                <td><%= link_to "Delete", reminder_delete_path(reminder), remote: true, class: 'btn btn-danger'  %></td>
            </tr>
        <%# end %>
<% end %>
            </tbody>
            </table>
        </div>
    </div>



<div id="reminder-modal" class="modal fade"></div>