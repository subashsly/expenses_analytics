$("ul.errors").html("")
<% if @reminder.errors.any? %>
	<% @reminder.errors.full_messages.each do |msg| %>
		$("ul.errors").append($("<li />").html("<%= msg.html_safe %>"))
	<% end %>
<% else %>
var total =$("h3.total_expense").text();
	 
	 		if (total != "") {
	 			  location.reload();
	 		}
	$("#reminder").append("<%= j render @reminder%>")
	$("#reminder-modal").modal("hide")
<% end %>
