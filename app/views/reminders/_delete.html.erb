<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3>Delete Reminder</h3>
		</div>

		<div class="modal-body">
			<ul class="errors"></ul>
			Are you sure you want to delete <b><%= @reminder.title  %></b>
		</div>

		<div class="modal-footer">
			<%= link_to "Yes, Delete This Reminder", reminder_path(@reminder), method: :delete, remote: true, class: 'btn btn-danger' %>
			<%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
		</div>
	</div>
</div>