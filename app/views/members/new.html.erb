<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class="row">
	<div class="col col-md-6 col-md-offset-3">
		<%= form_for(@member) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :member_name, class: 'form-control' %>

			<%= f.label :email %>
			<%= f.text_field :member_email, class: 'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation, class: 'form-control' %>

			<!-- <div class="form-group">
				<%#= f.label :country, :class => "col-md-3 control-label" %>
				<div class="col-md-9">
					<%#= f.country_select :member_country, ["Nepal"], {}, { :class => "form-control" } %>
				</div>
			</div> -->

			<%= f.label :country_code, "Country" %>
			<%= f.country_select :member_country, prompt: "Select a country" %>

			<div>
			<%= check_box_tag 'accept', class: "checkbox" %> 
			<span>I agree to the Terms and Conditions.</span>
			</div>

			<%= f.submit "Sign up", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>