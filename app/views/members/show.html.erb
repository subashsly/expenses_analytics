<!-- Javascript for running chart (Line chart and PieChart) -->
<script>
    $(document).ready(function () {
    $('#printChart').highcharts({
        chart: {
            type: 'line'
            
        },
        title: {
            text: 'Expenses and Incomes'
        },
        credits: {
            enabled: false
        },
        subtitle: {
            text: 'Source: ExpenseAnalytics.com'
        },
        xAxis: {

            type: 'datetime',
            
        },

        yAxis: {
            title: {
                text: 'Currency'
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true

                    
                },marker: {
                    enabled: false
        },
                enableMouseTracking: true,

            }
        },
        series: [{
                    pointInterval: <%= 1.day * 1000 %>,
                    pointStart: <%= 3.weeks.ago.to_i * 1000%>,
                    name: 'Income',color: 'green',
                        data: <%= (3.weeks.ago.to_date..Date.today).map{|date| @income.total_on(date).to_f}.inspect%>
                    },
                    {
                        pointInterval: <%= 1.day * 1000 %>,
                    pointStart: <%= 3.weeks.ago.to_i * 1000%>,
                        name: 'Expenses',
                         data: <%= (3.weeks.ago.to_date..Date.today).map{|date| @expense.total_on(date).to_f}.inspect%>
            }]
    });
});


// For Pie-chart
$(function () {

    $(document).ready(function () {

        // Build the chart
        $('#pieChart').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie'
            },
            credits: {
                enabled: false
            },
            title: {
                text: 'Comparison Chart of Expense and Income'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false
                    },
                    showInLegend: true
                }
            },
            series: [{
                name: 'Analytics',
                colorByPoint: true,
                data: [{
                    name: 'Expenses',
                    y: <%= current_member.expenses.sum(:amount) %>,
                    sliced: true,
                    selected: true
                }, {
                    name: 'Incomes',
                    y: <%= current_member.incomes.sum(:amount) %>,
                    color: 'green'
                }]
            }]
        });
    });
});
</script>

