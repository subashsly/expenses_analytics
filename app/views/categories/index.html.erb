<% provide(:title, "Tags") %>
<div class="container">
	<div class="expense table-margin">
	<br/>
		<%= link_to "Add Tag", new_category_path, 
				remote: true, class: 'btn sign-up' %>

	
	<br/>

	<table id="category"  class="table table-bordered table-striped">
		<thead>
			<tr>
				<td>Title</td>
				<td>No. of  Income Transaction</td>
				<td>No. of  expense Transaction</td>
				<td colspan="2">action</td>
			</tr>
		</thead>

		<tbody class="category-index">
			<%#= render 'index' %>
			<div id="ajax">
				<% @categories.each do |category| %>
					<tr id="category-<%= category.id%>">
						<td><%= link_to category.title, category_path(category) %></td>
						<td><%= category.incomes.count %></td>
						<td><%= category.expenses.count %></td>
						
						<td><%= link_to "Edit", edit_category_path(category), 
										remote: true, class: 'btn btn-default' %></td>
						<td><%= link_to "Delete", category_delete_path(category), remote: true, class: 'btn btn-danger' %></td>
					</tr>
				<% end %>
			</div>
		</tbody>
	</table>
</div>
</div>
<div id="category-modal" class="modal fade"></div>


