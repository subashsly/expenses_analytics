<p id="notice"><%= notice %></p>


<% provide(:title, "Contacts") %>
<div class="container">
  <div class="expense table-margin">
  <br/>
    <%= link_to "Add Contact", new_contact_path, 
        remote: true, class: 'btn sign-up' %>

  <br/>
  <br/>

  
  <table id="contact" class="table table-bordered table-striped">
    <thead>
      <tr>
        <td>Name</td>
        <!-- <td>Description</td> -->
        <td>Phone no.</td>
        <td>Address</td>
      <th colspan="2">Action</th>
      </tr>
    </thead>

    <tbody class="contact-index">
      <% @contacts.each do |contact| %>
        <tr id="contact-<%= contact.id%>">
          <td><%= contact.name %></td>
          <td><%= contact.phone_no %></td>
          <td><%= contact.address %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact),  remote: true, class: 'btn btn-default' %></td>
          <td><%= link_to 'Delete', contact_delete_path(contact),  remote: true, class: 'btn btn-danger'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div id="contact-modal" class="modal fade"></div>
