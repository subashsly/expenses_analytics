$("ul.errors").html("")
<% if @contact.errors.any? %>
	<% @contact.errors.full_messages.each do |msg| %>
		$("ul.errors").append($("<li />").html("<%= msg.html_safe %>"))
	<% end %>
<% else %>
	
	$('#contact-<%= @contact.id %>').replaceWith('<%= j render(@contact) %>') 
	$("#contact-modal").modal("hide")
<% end %>
