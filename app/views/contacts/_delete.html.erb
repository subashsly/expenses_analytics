<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3>Delete Contact</h3>
		</div>

		<div class="modal-body">
			<ul class="errors"></ul>
			Are you sure you want to delete <b><%= @contact.name  %></b>
		</div>

		<div class="modal-footer">
			<%= link_to "Yes, Delete This Contact", contact_path(@contact), method: :delete, remote: true, class: 'btn btn-danger' %>
			<%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
		</div>
	</div>
</div>